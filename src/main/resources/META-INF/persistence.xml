<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="projetoMEIPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.jaaday.projetomei.modelo.Municipio</class>
    <class>br.com.jaaday.projetomei.modelo.FormaAtuacao</class>
    <class>br.com.jaaday.projetomei.modelo.UnidadeForma</class>
    <class>br.com.jaaday.projetomei.modelo.Empresa</class>
    <class>br.com.jaaday.projetomei.modelo.Atividades</class>
    <class>br.com.jaaday.projetomei.modelo.Endereco</class>
    <class>br.com.jaaday.projetomei.modelo.Empresario</class>
    <class>br.com.jaaday.projetomei.modelo.Cnae</class>
    <class>br.com.jaaday.projetomei.modelo.TipoImovel</class>
    <class>br.com.jaaday.projetomei.modelo.TipoUnidade</class>
    <class>br.com.jaaday.projetomei.modelo.TipoLogradouro</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/mei_db"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
